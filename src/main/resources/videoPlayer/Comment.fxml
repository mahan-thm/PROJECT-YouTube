<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.CommentController">
   <children>
      <VBox fx:id="videoComment_vBox" layoutX="72.0" prefWidth="455.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="24.0" prefWidth="420.0" spacing="10.0" VBox.vgrow="NEVER">
               <children>
                  <Hyperlink fx:id="cmntChannelUsername_hyperLink" text="\@what_channel" />
                  <Label fx:id="whenCommented_label" text="6 months ago" textFill="#848484" />
               </children>
            </HBox>
            <Label fx:id="cmntText_label" styleClass="label_change" stylesheets="@VideoPlayerStyle.css" text="shnfffffffffffffffffffffffffffffffftrmzMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMM" wrapText="true" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="584.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="like_button" alignment="BASELINE_LEFT" maxHeight="25.0" maxWidth="61.0" minHeight="25.0" minWidth="61.0" mnemonicParsing="false" onAction="#likeComment_action" prefHeight="25.0" prefWidth="61.0" text="20k">
                     <graphic>
                        <Button fx:id="likeIcon_button" maxHeight="15.0" maxWidth="15.0" minHeight="15.0" minWidth="15.0" mnemonicParsing="false" prefHeight="15.0" prefWidth="15.0" text="Button" />
                     </graphic>
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Button>
                  <Button fx:id="dislike_button" alignment="BASELINE_RIGHT" contentDisplay="RIGHT" maxHeight="25.0" maxWidth="40.0" minHeight="25.0" minWidth="40.0" mnemonicParsing="false" onAction="#dislikeComment_button" prefHeight="25.0" prefWidth="40.0" text="  ">
                     <graphic>
                        <Button fx:id="dislikeIcon_button" maxHeight="15.0" maxWidth="15.0" minHeight="15.0" minWidth="15.0" mnemonicParsing="false" prefHeight="15.0" prefWidth="15.0" />
                     </graphic>
                  </Button>
                  <Hyperlink onAction="#replyComment_action" text="Reply">
                     <HBox.margin>
                        <Insets left="15.0" />
                     </HBox.margin></Hyperlink>
               </children>
            </HBox>
            <Hyperlink onAction="#showCommentReplies_action" text="n Replies" />
         </children>
      </VBox>
      <Circle fx:id="commentProf_circle" fill="DODGERBLUE" layoutX="35.0" layoutY="35.0" radius="25.0" stroke="BLACK" strokeType="INSIDE" />
   </children>
</AnchorPane>
